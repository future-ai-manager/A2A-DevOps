{
  "name": "@devops/a2a-cli",
  "version": "1.0.0",
  "description": "Agent-to-Agent DevOps Platform - Natural language control of DevOps operations through AI-powered agents",
  "main": "dist/cli/index.js",
  "bin": {
    "a2a": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node --transpile-only src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postinstall": "node scripts/check-dependencies.js",
    "start": "node dist/cli/index.js"
  },
  "keywords": [
    "devops",
    "kubernetes",
    "security",
    "monitoring",
    "falco",
    "prometheus",
    "ai",
    "claude",
    "mcp",
    "cli"
  ],
  "author": "DevOps Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "express": "^4.18.0",
    "inquirer": "^9.2.0",
    "ora": "^5.4.1",
    "socket.io": "^4.7.0",
    "winston": "^3.11.0",
    "ws": "^8.14.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/inquirer": "^9.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.0"
  },
  "files": [
    "dist/**/*",
    "config/**/*",
    "scripts/**/*",
    "*.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/a2a-cli.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/a2a-cli/issues"
  },
  "homepage": "https://docs.a2a-cli.dev"
}
